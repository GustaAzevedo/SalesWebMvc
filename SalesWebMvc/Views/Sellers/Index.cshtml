@model IEnumerable<SalesWebMvc.Models.Seller>
@{
    ViewData["Title"] = "Sellers";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-info">Create</a>
</p>

<table class=" table table-striped table-hover ">
    <thead >
        <tr class="info">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BirthDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BaseSalary)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var i in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelI => i.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelI => i.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelI => i.BirthDate)
                </td>
                <td>
                    @Html.DisplayFor(modelI => i.BaseSalary)
                </td>
                <td>
                    <a class="btn btn-info" asp-action="Edit" asp-route-id="@i.Id" >Edit</a>
                    <a class="btn btn-success" asp-action="Details" asp-route-id="@i.Id" >Details</a>
                    <a class="btn btn-danger" asp-action="Remove" asp-route-id="@i.Id" >Remove</a>
                </td>
            </tr>
        }
    </tbody>
</table>

